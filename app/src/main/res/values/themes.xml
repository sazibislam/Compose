<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Theme.ComposeDemo" parent="android:Theme.Material.Light.NoActionBar">
    <item name="android:statusBarColor">@color/bg_color</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
    <item name="colorOnPrimary">@color/white</item>
  </style>

  <style name="Theme.App.Starting" parent="Theme.SplashScreen">
    <item name="android:statusBarColor">@color/white</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="windowSplashScreenBackground">@color/white</item>
    <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
         animated drawable. One of these is required. -->
    <item name="windowSplashScreenAnimatedIcon">@drawable/ic_police</item>
    <!-- Required for animated icons -->
    <item name="windowSplashScreenAnimationDuration">200</item>
    <!-- Set the theme of the Activity that directly follows your splash screen. -->
    <!-- Required -->
    <item name="postSplashScreenTheme">@style/Theme.ComposeDemo</item>
  </style>
</resources>